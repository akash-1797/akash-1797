n = int(input('n='))
n_1 = 2*n-1
n_2 = n_1-n
print(n_2)
for i in range(1,n+1,1):
  for s in range(1,i,1):
    print(' ',end='')
  for j in range(i,n+1,1):
    print(j,end='')
  print()
for i in range(1,n_2+1,1):
  for s in range(n_2-i):
    print(' ',end='')
  for j in range(n_2-i+1,n_2+2,1):
    print(j,end='')
  print()
