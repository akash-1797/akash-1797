N = int(input())
n_1 = (N+1)//2
n_2 = n_1-1
i = 1
while(i<=n_1):
  space = 1
  while(space<=n_1-i):
    print(' ',end='')
    space= space+1
  j  =1
  while(j<=(2*i)-1):
    print('*',end='')
    j = j+1
  print()
  i = i+1
i = n_2
while(i>=1):
  space = 1
  while(space<=n_2-i+1):
    print(' ',end='')
    space = space+1
  j = 1
  while(j<=2*i-1):
    print('*',end='')
    j = j+1
  print()
  i = i-1
    
    
